    private async Task RunJob()
    {
        await Connection.InvokeAsync("StartJob", JobProp.GetId());
    }

    private async Task CancelJob()
    {
        await Connection.InvokeAsync("CancelJob", JobProp.GetId());
        JobProp.SetStatus(JobStatus.Cancelled);
        StateHasChanged();
    }
}
