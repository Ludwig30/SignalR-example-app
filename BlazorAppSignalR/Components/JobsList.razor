@inject JobsService JobsService

<MudContainer Style="display:flex; flex-flow:row wrap; margin-bottom:1.5rem; margin-top:1.5rem;padding:0;" MaxWidth="MaxWidth.ExtraExtraLarge">
    @foreach (var job in Jobs)
    {
        <CascadingValue Value="Connection">
            <Job JobProp="job" JobName=@job.GetId() />
        </CascadingValue>
    }
</MudContainer>

@code {
    [Parameter]
    public List<ClassLibraryJobs.Job> Jobs { get; set; }
    [Parameter]
    public bool Disconnected { get; set; }
    [CascadingParameter]
    public HubConnection Connection { get; set; }    
}
